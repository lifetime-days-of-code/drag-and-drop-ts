{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
         "DOM",
         "ES6",
         "DOM.Iterable",
         "ScriptHost"   
        ],
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src/scripts",
        "removeComments": true,
        "noEmitOnError": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        
    },
    "exclude": ["node_modules"]
}